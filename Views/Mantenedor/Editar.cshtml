@model UsersModel
@{
    ViewData["Title"] = "Editar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card">
    <div class="card-header">
        Editar Usuario
    </div>
    <div class="card-body">
        <form asp-action="Editar" asp-controller="Mantenedor" method="post">
            <input asp-for="IdUsers" type="hidden" class="form-control">

            <div class="mb-3">
                <label class="form-label">Nombre</label>
                <input asp-for="Name" type="text" class="form-control" readonly>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label class="form-label">Fecha de nacimineto</label>
                <input asp-for="Date" type="date" class="form-control" readonly>
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>
            <div class="form-check">
                <input asp-for="Service" class="form-check-input" type="radio" value="Activo">
                <label class="form-check-label">
                    Activo
                </label>
            </div>
            <div class="form-">
                <input asp-for="Service" class="form-check-input" type="radio" value="Desactivo">
                <label class="form-check-label">
                    Desactivo
                </label>
            </div>
            <button type="submit" class="btn btn-primary">Guardar</button>
            <a asp-action="Listar" asp-controller="Mantenedor" class="btn btn-warning">Volver a la lista</a>
        </form>
    </div>
</div>